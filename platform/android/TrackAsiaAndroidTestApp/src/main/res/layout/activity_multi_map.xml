<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trackasia="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- DC -->
        <fragment
            android:id="@+id/map1"
            class="com.trackasia.android.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            trackasia:trackasia_cameraTargetLat="38.913187"
            trackasia:trackasia_cameraTargetLng="-77.032546"
            trackasia:trackasia_cameraZoom="12" />

        <!-- SF -->
        <fragment
            android:id="@+id/map2"
            class="com.trackasia.android.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            trackasia:trackasia_cameraTargetLat="37.775732"
            trackasia:trackasia_cameraTargetLng="-122.413985"
            trackasia:trackasia_cameraZoom="13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Bangalore -->
        <fragment
            android:id="@+id/map3"
            class="com.trackasia.android.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            trackasia:trackasia_cameraTargetLat="12.97913"
            trackasia:trackasia_cameraTargetLng="77.59188"
            trackasia:trackasia_cameraZoom="14" />

        <!-- Ayacucho -->
        <fragment
            android:id="@+id/map4"
            class="com.trackasia.android.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            trackasia:trackasia_cameraTargetLat="-13.155980"
            trackasia:trackasia_cameraTargetLng="-74.217134"
            trackasia:trackasia_cameraZoom="15" />
    </LinearLayout>
</LinearLayout>

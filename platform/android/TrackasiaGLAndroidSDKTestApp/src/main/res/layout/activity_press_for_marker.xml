<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.trackasia.android.maps.MapView
        android:id="@id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        app:trackasia_cameraTargetLat="45.1855569"
        app:trackasia_cameraTargetLng="5.7215506"
        app:trackasia_cameraZoom="11"
        app:trackasia_uiAttributionGravity="top|end"
        app:trackasia_uiLogoGravity="top|end"
        app:trackasia_uiLogoMarginRight="28dp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="trackasia_LocationComponent">
    <item name="trackasia_foregroundDrawable">@drawable/trackasia_user_icon</item>
    <item name="trackasia_backgroundDrawable">@drawable/trackasia_user_stroke_icon</item>
    <item name="trackasia_bearingDrawable">@drawable/trackasia_user_bearing_icon</item>
    <item name="trackasia_gpsDrawable">@drawable/trackasia_user_puck_icon</item>

    <item name="trackasia_foregroundDrawableStale">@drawable/trackasia_user_icon_stale</item>
    <item name="trackasia_backgroundDrawableStale">@drawable/trackasia_user_stroke_icon</item>

    <item name="trackasia_accuracyAlpha">0.15</item>
    <item name="trackasia_accuracyColor">@color/trackasia_location_layer_blue</item>

    <item name="trackasia_elevation">12dp</item>

    <item name="trackasia_enableStaleState">true</item>
    <item name="trackasia_staleStateTimeout">30000</item>

    <!-- Location icon padding -->
    <item name="trackasia_iconPaddingLeft">0</item>
    <item name="trackasia_iconPaddingTop">0</item>
    <item name="trackasia_iconPaddingRight">0</item>
    <item name="trackasia_iconPaddingBottom">0</item>

    <!-- Location icon scale based on map zoom levels -->
    <item name="trackasia_maxZoomIconScale">1</item>
    <item name="trackasia_minZoomIconScale">0.6</item>

    <!-- Camera tracking settings -->
    <item name="trackasia_trackingGesturesManagement">false</item>
    <item name="trackasia_trackingInitialMoveThreshold">@dimen/trackasia_locationComponentTrackingInitialMoveThreshold</item>
    <item name="trackasia_trackingMultiFingerMoveThreshold">@dimen/trackasia_locationComponentTrackingMultiFingerMoveThreshold</item>

    <!-- Location pulsing circle -->
    <item name="trackasia_pulsingLocationCircleEnabled">false</item>
    <item name="trackasia_pulsingLocationCircleFadeEnabled">true</item>
    <item name="trackasia_pulsingLocationCircleColor">@color/trackasia_location_layer_blue</item>
    <item name="trackasia_pulsingLocationCircleDuration">2300</item>
    <item name="trackasia_pulsingLocationCircleRadius">35</item>
    <item name="trackasia_pulsingLocationCircleAlpha">0.4</item>
    <item name="trackasia_pulsingLocationCircleInterpolator">decelerate</item>

  </style>
</resources>